<% @hotels.each do |hotel| %>
<%= link_to hotel.name, hotel_path(hotel) %>

  <p><%= hotel.address %></p>
  <%= link_to "Modifier", edit_hotel_path(hotel) %>
  <br>
  <%= link_to "Delete", hotel_path(hotel),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <br>
  <br>

<% end %>

